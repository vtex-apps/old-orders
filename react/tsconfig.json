{
  "extends": "@vtex/tsconfig",
  "compilerOptions": {
    "noEmitOnError": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node"
    ],
    "module": "esnext",
    "noUnusedLocals": false,
    "moduleResolution": "node",
    "target": "es2017",
    "jsx": "preserve",
    "lib": [
      "es5",
      "es6",
      "es7",
      "dom"
    ],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./typings/*.d.ts",
    "./**/*.tsx",
    "./**/*.ts"
  ]
}